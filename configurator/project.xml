<?xml version="1.0" encoding="UTF-8"?>

<project>
  <extend>${basedir}/../mavenbuild/project.xml</extend>
  <name>configurator</name>
  <id>configurator</id>
  <currentVersion>0.3</currentVersion>
  <shortDescription>Configurator Bean Library</shortDescription>
  <description>Configurator Bean library.</description>
  <repository>
    <connection>scm:${scm.setup}/projects/configurator</connection>
  </repository>

  <versions>
    <version>
      <id>0.1</id>
      <name>0.1</name>
      <tag>RELEASE_0_1</tag>
    </version>
    <version>
      <id>0.2</id>
      <name>0.2</name>
      <tag>RELEASE_0_2</tag>
    </version>
  </versions>

  <dependencies>
    <dependency>
      <groupId>thebadgerset</groupId>
      <artifactId>common</artifactId>
      <version>0.3</version>
    </dependency>
    <!--<dependency>
      <groupId>thebadgerset</groupId>
      <artifactId>module</artifactId>
      <version>0.3</version>
    </dependency>-->

  </dependencies>
  <build>
    <!-- Include the sample config beans XMLs in the test class path. -->

    <unitTest>
      <resources>
        <resource>
          <directory>src/unittests</directory>
          <includes>
            <include>**/*.xml</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>

</project>
