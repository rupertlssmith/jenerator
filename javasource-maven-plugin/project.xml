<?xml version="1.0" encoding="UTF-8"?>

<project>
  <extend>${basedir}/../mavenbuild/project.xml</extend>
  <name>javasource-maven-plugin</name>
  <id>javasource-maven-plugin</id>
  <currentVersion>0.3</currentVersion>
  <shortDescription>Maven Plugin for Javasource</shortDescription>
  <description>Plugin to run Javasource code generator.</description>

  <repository>
    <connection>scm:${scm.setup}/projects/javasource-maven-plugin</connection>
  </repository>

  <versions>
    <version>
      <id>0.1</id>
      <name>0.1</name>
      <tag>RELEASE_0_1</tag>
    </version>
    <version>
      <id>0.2</id>
      <name>0.2</name>
      <tag>RELEASE_0_2</tag>
    </version>
  </versions>

  <dependencies>

    <dependency>
      <groupId>thebadgerset</groupId>
      <artifactId>javasource</artifactId>
      <version>0.3</version>
    </dependency>

    <dependency>
      <groupId>thebadgerset</groupId>
      <artifactId>common</artifactId>
      <version>0.3</version>
      <properties/>
    </dependency>

    <dependency>
      <groupId>jwsdp</groupId>
      <artifactId>jaxb-api</artifactId>
      <version>jwsdp.2.0</version>
    </dependency>

    <dependency>
      <groupId>jwsdp</groupId>
      <artifactId>activation</artifactId>
      <version>jwsdp.2.0</version>
    </dependency>

    <!--<dependency>
      <groupId>jwsdp</groupId>
      <artifactId>jaxp-api</artifactId>
      <version>jwsdp.2.0</version>
    </dependency>-->

    <dependency>
      <groupId>jwsdp</groupId>
      <artifactId>jaxb-impl</artifactId>
      <version>jwsdp.2.0</version>
    </dependency>

    <dependency>
      <groupId>jwsdp</groupId>
      <artifactId>jsr173_api</artifactId>
      <version>jwsdp.2.0</version>
    </dependency>

    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.8</version>
    </dependency>

    <dependency>
      <groupId>regexp</groupId>
      <artifactId>regexp</artifactId>
      <version>1.3</version>
    </dependency>

    <dependency>
      <groupId>xml-apis</groupId>
      <artifactId>xml-apis</artifactId>
      <version>1.3.03</version>
    </dependency>

    <dependency>
      <groupId>xerces</groupId>
      <artifactId>xercesImpl</artifactId>
      <version>2.8.0</version>
    </dependency>

    <dependency>
      <groupId>xalan</groupId>
      <artifactId>xalan</artifactId>
      <version>2.7.0</version>
    </dependency>

  </dependencies>

  <build>

    <!-- Plugin .jar resources. -->
    <resources>
      <resource>
        <directory>${basedir}/src/plugin</directory>
        <includes>
          <include>*</include>
        </includes>
      </resource>

      <resource>
        <directory>${basedir}</directory>
        <includes>
          <include>project.xml</include>
          <include>project.properties</include>
        </includes>
      </resource>
    </resources>

  </build>
</project>
