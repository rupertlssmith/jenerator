<?xml version="1.0" encoding="UTF-8"?>

<project>
  <extend>${basedir}/../mavenbuild/project.xml</extend>
  <name>javasource</name>
  <id>javasource</id>
  <currentVersion>0.3</currentVersion>
  <shortDescription>Java Source Code Model</shortDescription>
  <description>Java Source Code Model</description>

  <repository>
    <connection>scm:${scm.setup}/projects/javasource</connection>
  </repository>

  <versions>
    <version>
      <id>0.1</id>
      <name>0.1</name>
      <tag>RELEASE_0_1</tag>
    </version>
    <version>
      <id>0.2</id>
      <name>0.2</name>
      <tag>RELEASE_0_2</tag>
    </version>
  </versions>

  <dependencies>

    <dependency>
      <groupId>thebadgerset</groupId>
      <artifactId>common</artifactId>
      <version>0.3</version>
      <properties>
        <javaapp.include>true</javaapp.include>
      </properties>
    </dependency>

    <dependency>
      <groupId>jwsdp</groupId>
      <artifactId>jaxb-api</artifactId>
      <version>jwsdp.2.0</version>
      <properties>
        <javaapp.include>true</javaapp.include>
      </properties>
    </dependency>

    <dependency>
      <groupId>jwsdp</groupId>
      <artifactId>jaxb-impl</artifactId>
      <version>jwsdp.2.0</version>
      <properties>
        <javaapp.include>true</javaapp.include>
      </properties>
    </dependency>

    <dependency>
      <groupId>jwsdp</groupId>
      <artifactId>jsr173_api</artifactId>
      <version>jwsdp.2.0</version>
      <properties>
        <javaapp.include>true</javaapp.include>
      </properties>
    </dependency>

    <dependency>
      <groupId>jiprolog</groupId>
      <artifactId>jiprolog</artifactId>
      <version>3.0.2</version>
      <properties>
        <javaapp.include>true</javaapp.include>
      </properties>
    </dependency>

  </dependencies>

  <build>
    <resources>
      <!-- Make sure all resources are bundled. -->
      <resource>
        <directory>src/resources</directory>
      </resource>
    </resources>
  </build>

</project>
