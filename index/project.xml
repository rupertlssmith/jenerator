<?xml version="1.0" encoding="UTF-8"?>

<project>
  <extend>${basedir}/../mavenbuild/project.xml</extend>
  <name>index</name>
  <id>index</id>
  <currentVersion>0.3</currentVersion>
  <shortDescription>Search Index</shortDescription>
  <description>An indexing and free text search module with some advanced features.</description>
  <repository>
    <connection>scm:${scm.setup}/projects/index</connection>
  </repository>

  <versions>
    <version>
      <id>0.1</id>
      <name>0.1</name>
      <tag>RELEASE_0_1</tag>
    </version>
    <version>
      <id>0.2</id>
      <name>0.2</name>
      <tag>RELEASE_0_2</tag>
    </version>
  </versions>

  <dependencies>
    <dependency>
      <groupId>thebadgerset</groupId>
      <artifactId>common</artifactId>
      <version>0.3</version>
      <properties>
        <javaapp.include>true</javaapp.include>
      </properties>
    </dependency>
    <dependency>
      <groupId>thebadgerset</groupId>
      <artifactId>configurator</artifactId>
      <version>0.3</version>
      <properties>
        <javaapp.include>true</javaapp.include>
      </properties>
    </dependency>
    <dependency>
      <groupId>thebadgerset</groupId>
      <artifactId>junit-toolkit</artifactId>
      <version>0.3</version>
      <properties>
        <javaapp.include>true</javaapp.include>
      </properties>
    </dependency>

    <!-- Dependencies to bundle in standalone application. -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <properties>
        <javaapp.include>true</javaapp.include>
      </properties>
    </dependency>

    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.8</version>
      <properties>
        <javaapp.include>true</javaapp.include>
      </properties>
    </dependency>

  </dependencies>
  <build>
    <resources></resources>
  </build>

</project>
